<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

  <grid name="person-grid" title="Persons"
    model="com.axelor.contact.db.Person">
    <field name="firstName" />
    <field name="middleName" />
    <field name="lastName" />
    <field name="dateOfBirth" />
    <field name="email" />
  </grid>

  <form name="person-form" title="Person"
    model="com.axelor.contact.db.Person">
    <panel title="Person Details">

      <field name="title" colSpan="2" />
      <field name="firstName" colSpan="3" />
      <field name="middleName" colSpan="3" />
      <field name="lastName" colSpan="3" />
      <field name="dateOfBirth" colSpan="2" />
      <field name="email" colSpan="5"></field>

    </panel>


    <panel title="About me">
      <field name="notes" showTitle="false" colSpan="12" />
    </panel>

      <panel-related field="contacts"
      form-view="contact-form-popup">
      <field name="phoneNo" />
    </panel-related>


    <panel-related field="addresses"
      form-view="address-form-popup">
      <field name="street" />
      <field name="area" />
      <field name="city" />
      <field name="state" />
      <field name="zip" />
      <field name="country" />
    </panel-related>




    <panel sidebar="true">
      <field name="createdOn" />
      <field name="createdBy" />
      <field name="updatedOn" />
      <field name="updatedBy" />
    </panel>
  </form>


  <form name="address-form-popup" title="Address"
    model="com.axelor.contact.db.Address">
    <panel title="Overview">
      <field name="street" />
      <field name="area" />
      <field name="city" />
      <field name="zip" />
      <field name="state" />
      <field name="country" />
    </panel>
  </form>

  <form name="contact-form-popup" title="Contact"
    model="com.axelor.contact.db.Contact">
    <panel title="Overview">
      <field name="phoneNo" />
    </panel>
  </form>




</object-views>
